{
  "breadcrumbs.enabled": true, // 階層リンク(パンくずリスト)の表示
  // エディター設定
  "editor.autoIndent": "full", // オートインデント
  "editor.codeActionsOnSave": { // コード整形
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.codeLens": false,
  "editor.cursorStyle": "line", // カーソルの形状
  "editor.cursorBlinking": "smooth", // カーソルの表示形式
  "editor.cursorWidth": 3, // カーソル幅
  "editor.detectIndentation": false,
  "editor.emptySelectionClipboard": false, // 選択範囲無しでのコピーを許可
  "editor.folding": true, // コードの折りたたみを許可
  "editor.fontSize": 14, //  文字サイズ
  "editor.formatOnType": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false, // codeActionsOnSaveの方を使う
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "editor.insertSpaces": true, // Tabキーで半角スペースを入力
  "editor.letterSpacing": -1, // 文字の間隔を詰める
  "editor.lineNumbers": "on", // 行番号の表示
  "editor.links": true, // リンクをクリック可能に
  "editor.matchBrackets": "always", // 対応する括弧の強調表示をオンに
  "editor.minimap.enabled": true, // ミニマップの表示
  "editor.minimap.maxColumn": 40, // ミニマップの幅
  "editor.minimap.renderCharacters": false, // ミニマップを簡略化
  "editor.minimap.showSlider": "always", // ミニマップのハイライトを常に表示
  "editor.minimap.side": "right", // ミニマップを右に表示
  "editor.mouseWheelScrollSensitivity": 0.7, // マウスホイール回転の移動係数
  "editor.mouseWheelZoom": false, // Ctrl+マウスホイールによるズームを無効化
  "editor.glyphMargin": true, // 行の左端に余白を作る
  "editor.quickSuggestions": { // 補完候補の自動表示
    "comments": false, // コメント内では無効
    "other": true, //  その他の場所で有効
    "strings": true // 文字列内では有効
  },
  "editor.renderControlCharacters": true, // 制御文字の表示
  "editor.renderIndentGuides": true, // インデントのガイドラインを表示
  "editor.renderLineHighlight": "all", // 選択中の行を強調する
  "editor.renderWhitespace": "boundary",
  "editor.roundedSelection": true, // 選択範囲の角を丸める
  "editor.scrollBeyondLastLine": true, // 最終行よりも下へのスクロールを許可
  "editor.snippetSuggestions": "top",
  "editor.suggestFontSize": 14, // サジェストの文字サイズ
  "editor.suggestLineHeight": 24, // サジェスト欄の行の高さ
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordWrap": "off", // 右端で折り返す
  "extensions.ignoreRecommendations": false, // 推奨事項の通知をOFF
  // エクスプローラー
  "explorer.confirmDragAndDrop": false,
  // ファイル設定
  "files.autoGuessEncoding": false, // 文字コードを自動判別
  "files.autoSave": "off", //ダーティファイルの作成を無効
  "files.encoding": "utf8",
  "files.eol": "\n", // 改行コードをLF(Linux/OSX)にする
  "files.exclude": { // エクスプローラーから除外するファイルとフォルダ
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/bin": true,
    "**/*.exe": true,
    "**/*.o": true,
    "**/*.obj": true,
    "**/*.ilk": true,
    "**/*.pdb": true,
    "**/*.tlog": true,
    "**/*.idb": true,
    "**/*.dll": true,
    "**.vs": true
  },
  "files.insertFinalNewline": true, // ファイルの終端に空の行を追加
  "files.trimFinalNewlines": true, // 不要な行の削除
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": { // CPU使用の軽減.サイズの大きいファイルがあるとCPU使用率が高くなることがある。
    "**/images/**": true
  },
  // git
  "git.autofetch": true,
  // Golang
  "go.useLanguageServer": true,
  "go.languageServerExperimentalFeatures": {
      "diagnostics": true,
      "documentLink": true
  },
  // indentRainbow
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  // peacock
  "peacock.color": "#832561",
  // クラッシュレポートを送信する
  "telemetry.enableCrashReporter": true,
  "telemetry.enableTelemetry": true,
  // ターミナル
  "terminal.integrated.rendererType": "dom",
  // vsicons
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.presets.jsonOfficial": true,
  // ウィンドウ設定
  "window.closeWhenEmpty": false,
  "window.zoomLevel": 0,
  // ワークベンチ設定
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#ab307e",
    "activityBar.activeBorder": "#25320e",
    "activityBar.background": "#ab307e",
    "activityBar.border": "#ffffff",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#25320e",
    "activityBarBadge.foreground": "#e7e7e7",
    "editor.background": "#121817",
    "editor.lineHighlightBackground": "#002255",
    "editor.selectionBackground": "#660000",
    "editorError.border": "#ff0000",
    "editorBracketMatch.background": "#ffff0077",
    "editorLineNumber.foreground": "#0077ffbb",
    "editorLineNumber.activeForeground": "#ffffff",
    "editorLink.activeForeground": "#5555ce",
    "editorSuggestWidget.selectedBackground": "#0044ff",
    "scrollbar.shadow": "#0077ff99",
    "scrollbarSlider.background": "#0077ff99",
    "scrollbarSlider.hoverBackground": "#00ccffcc",
    "statusBar.background": "#832561",
    "statusBar.foreground": "#e7e7e7",
    "statusBar.noFolderBackground": "#000000",
    "statusBar.noFolderForeground": "#ffffff",
    "statusBarItem.hoverBackground": "#ab307e",
    "sideBar.background": "#000000",
    "sideBar.foreground": "#ffffff",
    "tab.inactiveForeground": "#999999",
    "titleBar.activeBackground": "#832561",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#83256199",
    "titleBar.inactiveForeground": "#e7e7e799"
  }
}
